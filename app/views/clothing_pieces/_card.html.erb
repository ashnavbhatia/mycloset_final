<div class="card mb-3">
  <h2 class="card-header h4">
    Clothing Piece #<%= clothing_piece.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Title</dt>
      <!-- Display title start -->
      <dd><%= clothing_piece.title %></dd>
      <!-- Display title end -->

      <dt>Description</dt>
      <!-- Display description start -->
      <dd><%= clothing_piece.description %></dd>
      <!-- Display description end -->

      <dt>Image</dt>
      <!-- Display image start -->
      <dd>
        <%= cl_image_tag @clothing_piece.image, class: "img-fluid" %>
      </dd>
      <!-- Display image end -->

      <dt>Clothing type</dt>
      <!-- Display clothing_type start -->
      <dd><%= clothing_piece.clothing_type %></dd>
      <!-- Display clothing_type end -->

      <dt>Brand name</dt>
      <!-- Display brand_name start -->
      <dd><%= clothing_piece.brand_name %></dd>
      <!-- Display brand_name end -->

      <dt>Last used date</dt>
      <!-- Display last_used_date start -->
      <dd><%= clothing_piece.last_used_date %></dd>
      <!-- Display last_used_date end -->

      <dt>Borrowed</dt>
      <!-- Display borrowed start -->
      <dd><%= clothing_piece.borrowed %></dd>
      <!-- Display borrowed end -->

      <dt>Borrower</dt>
      <!-- Display borrower_id start -->
      <dd><%= clothing_piece.borrower_id %></dd>
      <!-- Display borrower_id end -->

      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= clothing_piece.user_id %></dd>
      <!-- Display user_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back clothing_piece, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link clothing_piece start -->
      <div class="col">
        <%= link_to edit_clothing_piece_url(clothing_piece), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link clothing_piece end -->

      <!-- Delete link clothing_piece start -->
      <div class="col">
        <%= link_to clothing_piece, method: :delete, data: { confirm: "Do you really want to delete this clothing_piece?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link clothing_piece end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(clothing_piece.updated_at) %> ago
  </div>
</div>
