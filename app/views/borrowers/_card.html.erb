<div class="card mb-3">
  <h2 class="card-header h4">
    Borrower #<%= borrower.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= borrower.name %></dd>
      <!-- Display name end -->

      <dt>Contact</dt>
      <!-- Display contact start -->
      <dd><%= borrower.contact %></dd>
      <!-- Display contact end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back borrower, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link borrower start -->
      <div class="col">
        <%= link_to edit_borrower_url(borrower), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link borrower end -->

      <!-- Delete link borrower start -->
      <div class="col">
        <%= link_to borrower, method: :delete, data: { confirm: "Do you really want to delete this borrower?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link borrower end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(borrower.updated_at) %> ago
  </div>
</div>
