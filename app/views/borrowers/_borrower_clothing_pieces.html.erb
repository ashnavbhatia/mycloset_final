<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Clothing Pieces

    <a data-toggle="collapse" href="#borrower_clothing_pieces_new_form">
      Add clothing piece
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @borrower.clothing_pieces.each do |clothing_piece| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to clothing_piece, clothing_piece %>

        <% if current_user == clothing_piece.user %>
          <%= link_to clothing_piece, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="borrower_clothing_pieces_new_form">
        <%= render partial: "borrowers/borrower_clothing_pieces_new_form" %>
      </div>
    </div>

  </ul>
</div>
