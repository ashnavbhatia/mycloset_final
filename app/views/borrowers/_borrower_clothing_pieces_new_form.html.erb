<!-- Form clothing_piece start -->
<%= form_with(model: @clothing_piece, local: true) do |f| %>
<!-- Form clothing_piece end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <%= f.label :title %>

    <!-- Input for title start -->
    <%= f.text_field :title, class: "form-control" %>
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, rows: "3", class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <%= f.label :image %>

    <!-- Input for image start -->
    <%= f.file_field :image, class: "form-control" %>
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <!-- Label and input for clothing_type start -->
  <div class="form-group">
    <%= f.label :clothing_type %>

    <!-- Input for clothing_type start -->
    <%= f.text_field :clothing_type, class: "form-control" %>
    <!-- Input for clothing_type end -->
  </div>
  <!-- Label and input for clothing_type end -->

  <!-- Label and input for brand_name start -->
  <div class="form-group">
    <%= f.label :brand_name %>

    <!-- Input for brand_name start -->
    <%= f.text_field :brand_name, class: "form-control" %>
    <!-- Input for brand_name end -->
  </div>
  <!-- Label and input for brand_name end -->

  <!-- Label and input for last_used_date start -->
  <div class="form-group">
    <%= f.label :last_used_date %>

    <!-- Input for last_used_date start -->
    <%= f.date_select :last_used_date, class: "form-control" %>
    <!-- Input for last_used_date end -->
  </div>
  <!-- Label and input for last_used_date end -->

  <!-- Label and input for borrowed start -->
  <div class="form-check">
    <!-- Input for borrowed start -->
    <%= f.check_box :borrowed, class: "form-check-input" %>
    <!-- Input for borrowed end -->
    <%= f.label :borrowed, class: "form-check-label" %>
  </div>
  <!-- Label and input for borrowed end -->

  <!-- Label and input for borrower_id start -->
  <!-- Input for borrower_id start -->
  <%= f.hidden_field :borrower_id, value: @borrower.id %>
  <!-- Input for borrower_id end -->
  <!-- Label and input for borrower_id end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <%= f.label :user_id %>

    <!-- Input for user_id start -->
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <%= f.submit "Create clothing piece", class: "btn btn-block btn-outline-secondary" %>
<% end %>
