<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Clothing Pieces

    <a data-toggle="collapse" href="#user_clothing_pieces_new_form">
      Add clothing piece
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.clothing_pieces.each do |clothing_piece| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to clothing_piece, clothing_piece %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_clothing_pieces_new_form">
        <%= render partial: "users/user_clothing_pieces_new_form" %>
      </div>
    </div>

  </ul>
</div>
